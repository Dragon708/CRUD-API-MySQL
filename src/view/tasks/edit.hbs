<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">
<h1 class="text-center font-bold text-3xl">Edit Task</h1>
    {{#each info}}
<form action="/update/{{id}}" method="POST" class="mt-4">
    <input type="text" value="{{title}}" placeholder="Task Title" name="title" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white">
    <textarea name="tareas"  id="" cols="30" rows="10" placeholder="Descripcion" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white h-40">{{tareas}}</textarea>
    <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-cyan-600 focus:bg-cyan-700">Send</button>
</form>
    {{/each}}

</div>