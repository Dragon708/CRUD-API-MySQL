<div class="max-w-7xl mx-auto sm:px-6 lg:px-8 my-4">
    <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg">
        <table class="table-fixed w-full">
            <thead >
                <tr class="bg-indigo-500 text-white">
                    <th class="w-20 py-4">ID</th>
                    <th class="w-1/4 py-4">Title</th>
                    <th class="w-1/3 py-4">Description</th>
                    <th class="w-28 py-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each respuesta }}
                <tr>
                    <td class="py-3 px-6">{{id}}</td>
                    <td class="p-3">{{title}}</td>
                    <td class="p-3 text-center">{{tareas}}</td>
                    <td class="p-3 flex gap-2 justify-center">
                        <form action="/delete" method="post" >
                        <input type="hidden" value="{{id}}" name='id' >
                        <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded-sm">
                            <i class="fas fa-trash" ></i>
                        </button>
                        </form>
                        <a href="/update/{{id}}" class="bg-green-500 text-white px-3 py-1 rounded-sm">
                            <i class="fas fa-pen" ></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>




</div>